if BOARD_NRF51_POLYU

config BOARD
	default nrf51_polyu

if GPIO_NRF5

config GPIO_NRF5_P0
	default y

endif # GPIO_NRF5

if UART_NRF5

config UART_NRF5_GPIO_TX_PIN
	default 21

config UART_NRF5_GPIO_RX_PIN
	default 23

config UART_NRF5_GPIO_RTS_PIN
	default 8

config UART_NRF5_GPIO_CTS_PIN
	default 10

endif # UART_NRF5

endif # BOARD_NRF51_POLYU
